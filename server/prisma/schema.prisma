generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  password    String        
  resumeText  String?       
  createdAt   DateTime      @default(now())
  applications Application[]
}

model Job {
  id          String        @id @default(uuid())
  title       String
  company     String
  location    String
  description String
  salary      String?
  type        String  
  jobUrl      String?     
  postedAt    DateTime      @default(now())
  applications Application[]

  
  @@index([location, type]) 
}

model Application {
  id        String   @id @default(uuid())
  status    String   @default("Applied") // <--- Added default value
  appliedAt DateTime @default(now())

  // --- NEW: Snapshot Fields (For the Dashboard) ---
  jobTitle  String   // <--- Add this
  company   String   // <--- Add this

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])

  @@unique([userId, jobId])
}